    "build:client": "esbuild ./src/client.jsx --bundle --minify --sourcemap --target=chrome58,firefox57,safari11 --outfile=dist/client.js",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.726.1",
