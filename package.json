  "repository": {
    "type": "git",
    "url": "git+https://github.com/blissito/react-hook-multipart.git",
    "directory": "src"
  },
  "homepage": "https://github.com/blissito/react-hook-multipart/tree/main/react-hook-multipart#readme",
